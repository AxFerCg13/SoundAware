<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="382dp"
        android:layout_height="188dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:background="#FFFFFF"
        android:padding="15dp"
        android:paddingTop="35dp"
        android:paddingBottom="35dp"
        android:gravity="center_vertical"
        android:justificationMode="inter_word"
        android:backgroundTint="#FFFFFF"
        android:elevation="4dp"
        android:outlineProvider="background">

        <ImageView
            android:id="@+id/card_icon"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:layout_gravity="center"
            android:contentDescription="@string/alert_image_description_label"
            tools:srcCompat="@tools:sample/avatars" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/alert_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="@string/alert_date_label"
                android:textColor="#181A89" />

            <TextView
                android:id="@+id/alert_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/alert_description_label"
                android:textColor="@android:color/black"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>